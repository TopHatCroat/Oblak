<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<br />
<%= link_to "New File", new_file_item_path(@current_user), class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Download Link</th>
    <th>&nbsp;</th>
  </tr>
  </thead>
  <tbody>
  <% @files.each do |file| %>
      <tr>
        <td><%= file.name %></td>
        <td><%= link_to "Download", file.attachment_url, class: "btn btn-block btn-success"%></td>
        <td><%= button_to "Delete",  file, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{file.name}?" %></td>
      </tr>
  <% end %>
  </tbody>
</table>

